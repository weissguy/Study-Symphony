{
  "name": "Study Symphony!",
  "description": "Soundtrack your studying with the perfect tunes.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "scrape.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["popup.css", "video.css"],
      "js": ["popup.js", "video.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}